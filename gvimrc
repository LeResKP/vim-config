" Use the mouse in all modes.
set mouse=a
set gfn=Bitstream\ Vera\ Sans\ Mono\ 9
" Gui options, default is 'agimrLtT'
set go=agirLte " no menubar, no toolbar

" Comments are in italic 
hi Comment  gui=italic
" Normal characters are grey (rather than white)
hi Normal   guifg=grey
" Popup menu for auto completion color
hi Pmenu    guibg=SeaGreen
" Selected popup menu line are black 
hi PmenuSel guifg=black
